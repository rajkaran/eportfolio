{% extends 'RajkaranPortfolioBundle:Admin:adminTemplate.html.twig' %}

{% block title %}Administrator | Home{% endblock %}

{% block styleSheetPageSpecific %}
	<link rel="stylesheet" href="{{ asset('bundles/rajkaranportfolio/css/admin.css') }}" />
{% endblock %}

{% block pageContent %}

	<div class="homeWrap">
		<h3>Home</h3>
		{{ form_start(form) }}
			
			<fieldset>
				<div class="row">
					{% if form_errors(form.screenName)%}
						<div class="alert alert-danger" role="alert"> 
							{{ ['Screen Name: ', form_errors(form.screenName)|replace({'<ul><li>': '', '</li></ul>': ''})]|join }}
						</div>
					{%endif%}
					
					{% if form_errors(form.imageName)%}
						<div class="alert alert-danger" role="alert"> 
							{{ ['Choose Image: ', form_errors(form.imageName)|replace({'<ul><li>': '', '</li></ul>': ''})]|join }}
						</div>
					{%endif%}
					
					{% if form_errors(form.tagLine)%}
						<div class="alert alert-danger" role="alert"> 
							{{ ['Tag Line: ', form_errors(form.tagLine)|replace({'<ul><li>': '', '</li></ul>': ''})]|join }}
						</div>
					{%endif%}
				</div>
				
				<div class="row">
					<div class="col-lg-12">
						<div class="form-group">
							
							<div class="input-group">
								{{ form_label(form.screenName, 'Screen Name', { 'label_attr': {'class': 'input-group-addon'} }) }}
								{{ form_widget(form.screenName, {'attr':{'class':'form-control', 'placeholder':'Screen Name', 'autofocus':'autofocus'}}) }}
							</div>
						</div>
						
						<div class="form-group">
							<div class="input-group">
								{{ form_label(form.imageName, 'Choose Image', { 'label_attr': {'class': 'input-group-addon'} }) }}
								{{ form_widget(form.imageName, {'attr':{'class':'form-control', 'placeholder':'Choose Image'}}) }}
							</div>
						</div>
						
						<div class="form-group">
							<div class="input-group">
								{{ form_label(form.tagLine, 'Tag Line', { 'label_attr': {'class': 'input-group-addon'} }) }}
								{{ form_widget(form.tagLine, {'attr':{'class':'form-control', 'rows':'3', 'placeholder':'Type your Tag Line.........'}}) }}
							</div>
						</div>
						<div class="form-group">
							{{ form_widget(form.save, {'attr':{'class':'btn btn-lg btn-primary btn-block'}}) }}
						</div>
					</div>
				</div>
			</fieldset>
		{{ form_end(form) }}
	</div>
	
{% endblock %}

