{% extends 'RajkaranPortfolioBundle:Admin:adminTemplate.html.twig' %}

{% block title %}Administrator | About Me{% endblock %}

{% block styleSheetPageSpecific %}
	<link rel="stylesheet" href="{{ asset('bundles/rajkaranportfolio/css/admin.css') }}" />
{% endblock %}

{% block pageContent %}

	<div class="aboutMeWrap">
		<h3>About Me</h3>
		{{ form_start(form) }}
			<fieldset>
				<div class="row">
					{% if form_errors(form.detail)%}
						<div class="alert alert-danger" role="alert"> 
							{{ ['Text About Me: ', form_errors(form.detail)|replace({'<ul><li>': '', '</li></ul>': ''})]|join }}
						</div>
					{%endif%}
				</div>
				
				<div class="row">
					<div class="col-lg-12">
						<div class="form-group">
							<div class="input-group">
								{{ form_label(form.detail, 'Text About Me', { 'label_attr': {'class': 'input-group-addon'} }) }}
								{#{ form_errors(form.detail) }#}
								{{ form_widget(form.detail, {'attr':{'class':'form-control', 'rows':'3', 'placeholder':'Say few words about yourself'}}) }}
							</div>
						</div>
						<div class="form-group">
							{{ form_widget(form.save, {'attr':{'class':'btn btn-lg btn-primary btn-block'}}) }}
						</div>
					</div>
				</div>
			</fieldset>
		{{ form_end(form) }}
	</div>
	
{% endblock %}

